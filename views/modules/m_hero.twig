<div class="hero">
    <div class="hero__wrapper">
        <div class="slider js-slider">
            {% for item in items %}
            <div class="slider__item js-item{% if loop.first %} is-active{% endif %}" data-item="{{loop.index0}}">
                <div class="slider__map">
                    [[svg::{{item.map}}]]
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="slider__elements">
            <div class="slider__nav">
                {% for item in items %}
                <span class="slider__point{% if loop.first %} is-active{% endif %}"></span>
                {% endfor %}
            </div>
            <div class="slider__captions">
                {% for item in items %}
                <div class="slider__caption{% if loop.first %} is-active{% endif %}" data-caption="{{loop.index0}}">
                    <span class="slider__sup">{{item.sup}}</span>
                    <div class="slider__stat">{{item.stat}}</div>
                    <div class="slider__sub">
                        <div class="equal-icon"><img src="media/dotted-oval.png" alt=""></div>
                        <span>{{item.sub}}</span>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>