{% include '../components/heading.twig' with heading %}
<div class="wrapper">
    <div class="wrapper__row wrapper__row--end" data-animation="video-text">
        {% for col in row_top %}
        <div class="col-{{col.size}} js-col-{{col.size}}">
            <div class="tile js-tile">
                {% if col.video %}
                {% include '../components/video.twig' with col.video %}
                {% endif %}
                {% if col.youtube %}
                {% include '../components/youtube.twig' with col.youtube %}
                {% endif %}
                {% if col.vimeo %}
                {% include '../components/vimeo.twig' with col.vimeo %}
                {% endif %}
                {% if col.text %}
                <div class="tile__portal-logo"><img src="{{col.logo}}" alt=""></div>
                <div class="tile__lead tile__lead--big">{{col.lead|raw}}</div>
                <div class="tile__text">{{col.text|raw}}</div>
                <div class="tile__footer">
                {% if col.social %}
                    <div class="tile__evaluation">
                        {% if col.like %}
                        {% include '../components/clap.twig' %}
                        {% endif %}
                        {% if col.dislike %}
                        {% include '../components/dislike.twig' %}
                        {% endif %}
                    </div>
                    {% include '../components/share.twig' with col.social %}
                    {% endif %}
                </div>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
    <div class="wrapper__row wrapper__row--bottom wrapper__row--end" data-animation="video-text">
        {% for col in row_bottom %}
        <div class="col-{{col.size}} js-col-{{col.size}}">
            <div class="tile js-tile">
                {% if col.video %}
                {% include '../components/video.twig' with col.video %}
                {% endif %}
                {% if col.youtube %}
                {% include '../components/youtube.twig' with col.youtube %}
                {% endif %}
                {% if col.vimeo %}
                {% include '../components/vimeo.twig' with col.vimeo %}
                {% endif %}
                {% if col.text %}
                <div class="tile__portal-logo"><img src="{{col.logo}}" alt=""></div>
                <div class="tile__lead tile__lead--big">{{col.lead|raw}}</div>
                <div class="tile__text">{{col.text|raw}}</div>
                <div class="tile__footer">
                {% if col.social %}
                    <div class="tile__evaluation">
                        {% if col.like %}
                        {% include '../components/clap.twig' %}
                        {% endif %}
                        {% if col.dislike %}
                        {% include '../components/dislike.twig' %}
                        {% endif %}
                    </div>
                    {% include '../components/share.twig' with col.social %}
                    {% endif %}
                </div>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
</div>